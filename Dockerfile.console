# syntax=docker/dockerfile:1

FROM golang:1.22-alpine AS builder
WORKDIR /app

# Install git if needed
RUN apk add --no-cache git

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Build Console service binary
RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/console ./cmd/console

FROM alpine:3.20
WORKDIR /app

ENV PORT=8080

COPY --from=builder /bin/console /app/console

EXPOSE 8080

CMD ["/app/console"]

